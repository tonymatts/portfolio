<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context=".PhoneBookMain" >

    <TextView
        android:id="@+id/mIntroductionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/m_introduction_string"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/mIntroContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_map"
        android:layout_below="@id/mIntroductionTextView"
        android:textSize="14sp" />
    
    <ImageView
        android:id="@+id/shiftingmImageView"  
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"	    
        android:layout_alignParentTop="true"
	    android:scaleType="fitStart"
        android:src="@drawable/shifting_map"
        android:visibility="gone"/>
    
    <Button
        android:id="@+id/goToMQButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_map_quiz"
        android:visibility="gone"      
        android:layout_alignParentBottom="true"
        android:textSize="14sp" />     

</RelativeLayout>